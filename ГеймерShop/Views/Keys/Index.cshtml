@model IEnumerable<ГеймерShop.Models.Key>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Игра
            </th>
            <th>
                Ключ
            </th>
            <th>
                Статус
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Game.Name
            </td>
            <td>
                @item.Value
            </td>
            <td>
                @item.KeyStatus.Name
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="row justify-content-center link-game">
    <a asp-controller="Games" asp-action="Management">Вернуться к листу</a>
</div>
