@model IEnumerable<ГеймерShop.Models.Key>

<div class="row header-game"></div>
<div class="container-fluid panel">
    @if (Model.Count() == 0)
    {
        <div class="row justify-content-center">
            <span class="text-game pt-5 pb-5">У игры нет ключей</span>
        </div>
    }
    else
    {
        <table class="table text-game">
            <thead>
                <tr>
                    <th>
                        Игра
                    </th>
                    <th>
                        Ключ
                    </th>
                    <th>
                        Статус
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Game.Name
                        </td>
                        <td>
                            @item.Value
                        </td>
                        <td>
                            @item.KeyStatus.Name
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="row justify-content-center pt-5 pb-5 link-game">
        <a asp-controller="Games" asp-action="Management">Вернуться к листу</a>
    </div>
</div>