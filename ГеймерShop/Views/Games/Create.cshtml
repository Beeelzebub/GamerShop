@model ГеймерShop.ViewModels.GameViewModel

<div class="row header-game"></div>
<div class="container-fluid panel text-game">
    <div class="row justify-content-center pt-5 pb-5">
        <h2>Добавление игры</h2>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control input-game" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control input-game" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreId" class="control-label"></label>
                    <select asp-for="GenreId" class="form-control custom-select" asp-items="ViewBag.GenreId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PlaingFieldId" class="control-label"></label>
                    <select asp-for="PlaingFieldId" class="form-control custom-select" asp-items="ViewBag.PlaingFieldId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="OS" class="control-label"></label>
                    <input asp-for="OS" class="form-control input-game" list="OSs" />
                    <span asp-validation-for="OS" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CPU" class="control-label"></label>
                    <input asp-for="CPU" class="form-control input-game" list="CPUs" />
                    <span asp-validation-for="CPU" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RAM" class="control-label"></label>
                    <input asp-for="RAM" class="form-control input-game" list="RAMs" />
                    <span asp-validation-for="RAM" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GPU" class="control-label"></label>
                    <input asp-for="GPU" class="form-control input-game" list="GPUs" />
                    <span asp-validation-for="GPU" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Memory" class="control-label"></label>
                    <input asp-for="Memory" class="form-control input-game" list="Memory" />
                    <span asp-validation-for="Memory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Изображение</label>
                    <input name="Image" type="file" class="form-control input-game" />
                </div>
                <div class="form-group pt-5">
                    <input type="submit" value="Создать" class="btn btn-outlined btn-game" />
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center pt-1 pb-5">
        <a asp-action="Management">Назад</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<datalist id="OSs">
    @{
        foreach (var item in ViewBag.OSs)
        {
            <option value="@item"></option>
        }
    }
</datalist>
<datalist id="CPUs">
    @{
        foreach (var item in ViewBag.CPUs)
        {
            <option value="@item"></option>
        }
    }
</datalist>
<datalist id="GPUs">
    @{
        foreach (var item in ViewBag.GPUs)
        {
            <option value="@item"></option>
        }
    }
</datalist>
<datalist id="RAMs">
    @{
        foreach (var item in ViewBag.RAMs)
        {
            <option value="@item"></option>
        }
    }
</datalist>
<datalist id="Memory">
    @{
        foreach (var item in ViewBag.Memory)
        {
            <option value="@item"></option>
        }
    }
</datalist>

