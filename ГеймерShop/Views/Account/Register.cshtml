@model ГеймерShop.ViewModels.RegisterViewModel
<div class="row header-game"></div>
<div class="container-fluid panel text-game">
    <div class="row justify-content-center pt-5 pb-5">
        <h2>Регистрация</h2>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control input-game" placeholder="Логин" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control input-game" placeholder="Пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-5">
                            <input asp-for="PasswordConfirm" class="form-control input-game" placeholder="Подтвердите пароль" />
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center pt-1 pb-5">
                    <input type="submit" value="Регистрация" class="btn btn-outlined btn-game " />
                </div>
            </form>
        </div>
    </div>
</div>

