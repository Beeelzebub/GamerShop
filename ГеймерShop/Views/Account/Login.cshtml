@model ГеймерShop.ViewModels.LoginViewModel

<div class="row header-game"></div>
<div class="container-fluid panel text-game">
    <div class="row justify-content-center pt-5 pb-5">
        <h2>Вход</h2>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-3 text-center">
            <form method="post" asp-controller="Account" asp-action="Login"
                  asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label><br />
                    <input asp-for="UserName" class="form-control input-game" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label><br />
                    <input asp-for="Password" class="form-control input-game" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="pt-5">
                    <input type="submit" value="Войти" class="btn btn-block btn-outlined btn-game " />
                </div>
            </form>
            <div class="row justify-content-center pt-1 pb-5">
                <a class="mr-1" asp-action="Register">Регистарция</a>
            </div>
        </div>
    </div>
</div>