@model User
<div class="row header-game"></div>
<div class="container-fluid panel text-game">
    <div class="row justify-content-center">
        <div class="col-2 pt-3 pb-3">
            <a asp-controller="Orders" asp-action="MyHistory" class="btn btn-block btn-outlined btn-game">Моя история</a>
        </div>
    </div>
    @if (User.IsInRole("admin"))
    {
        <div class="row justify-content-center">
            <div class="col-2 pb-3">
                <a asp-controller="Games" asp-action="Management" class="btn btn-block btn-outlined btn-game">Товары</a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-2 pb-3">
                <a asp-controller="Orders" asp-action="AllHistory" class="btn btn-block btn-outlined btn-game">История всех заказов</a>
            </div>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-2 pb-3">
            <a asp-controller="Account" asp-action="Logout" class="btn btn-block btn-outlined btn-game">Выход</a>
        </div>
    </div>
</div>